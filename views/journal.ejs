<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>e-Library</title>
    <link rel="icon" type="image/x-icon" href="/img/icon.png" />

    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link href="/styles/style.css" rel="stylesheet" />
    <link href="/styles/journal.css" rel="stylesheet" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet" />
  </head>
  <body>
    <button onclick="topFunction()" id="myBtn" title="Go to top">
      <i class="bi bi-caret-up"></i>
    </button>
    <!--  -->
    <div id="navbar-section"></div>
    <!--  -->

    <main id="book" class="p-5">
      <!-- <section>
        <form class="search-form d-flex container-fluid" role="search">
          <input
            class="form-control shadow-sm me-2"
            type="search"
            placeholder="Search"
            aria-label="Search" />
          <button class="btn btn-search" type="submit">Search</button>
        </form>
      </section> -->

      <section class="container-fluid">
        <h1 class="mt-5">All Journal</h1>
        <br />
        <section class="ms-5 col-12">
          <div>
            <div class="d-flex" style="flex-wrap: wrap; gap: 5px">
              <% books1.forEach(function(book) { %>
              <div class="item">
                <a href="/book-detail?id=<%= book.id %>"
                  ><div class="card" style="width: 12em; height: 25em">
                    <img
                      src="<%= book.volumeInfo.imageLinks.thumbnail %>"
                      alt="<%= book.volumeInfo.title %>"
                      class="card-img-top w-100 h-75 object-fit-cover" />
                    <div class="card-body">
                      <h6 class="card-text truncated-text">
                        <%= book.volumeInfo.title %>
                      </h6>
                      <p class="card-text truncated-text">
                        <%= book.volumeInfo.authors %>
                      </p>
                    </div>
                  </div></a
                >
              </div>
              <% }); %> <% books2.forEach(function(book) { %>
              <div class="item">
                <a href="/book-detail?id=<%= book.id %>"
                  ><div class="card" style="width: 12em; height: 25em">
                    <img
                      src="<%= book.volumeInfo.imageLinks.thumbnail %>"
                      alt="<%= book.volumeInfo.title %>"
                      class="card-img-top w-100 h-75 object-fit-cover" />
                    <div class="card-body">
                      <h6 class="card-text truncated-text">
                        <%= book.volumeInfo.title %>
                      </h6>
                      <p class="card-text truncated-text">
                        <%= book.volumeInfo.authors %>
                      </p>
                    </div>
                  </div></a
                >
              </div>
              <% }); %>
            </div>
          </div>
          <!--  -->
        </section>
      </section>
    </main>

    <!--  -->
    <div id="footer-section"></div>
    <!--  -->

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/script/script.js"></script>
    <script src="/script/navbar.js"></script>
    <script src="/script/footer.js"></script>
  </body>
</html>
